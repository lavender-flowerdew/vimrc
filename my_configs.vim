fun! Solarized8Contrast(delta)
  let l:schemes = map(["_low", "_flat", "", "_high","_sea"], '"solarized8_".(&background).v:val')
  exe "colors" l:schemes[((a:delta+index(l:schemes, g:colors_name)) % 4 + 4) % 4]
endf
